<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".AddEditTaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/task_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton
            android:id="@+id/idBackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/idEdtTaskName"
        android:layout_width="401dp"
        android:layout_height="76dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="monospace"
        android:hint="Enter task title"
        android:gravity="start|top"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:background="@color/header_color"
        android:textColorHint="@color/text_color" />

    <EditText
        android:id="@+id/idEdtTaskDesc"
        android:layout_width="394dp"
        android:layout_height="121dp"
        android:layout_above="@id/idBtn"
        android:layout_below="@id/idEdtTaskName"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="316dp"
        android:background="@color/header_color"
        android:fontFamily="monospace"
        android:gravity="start|top"
        android:hint="Enter your task details"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color" />

    <Button
        android:id="@+id/idRemindBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/task_color"
        android:text="Remind me about my task in hour"
        android:textAllCaps="false"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/idBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/task_color"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@color/text_color" />

</RelativeLayout>
